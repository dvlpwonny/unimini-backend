<mapper namespace="com.unimini.mapper.UserMapper">
    <!-- 로그인 -->
    <select id="findUserByEmail" resultType="com.unimini.vo.User" parameterType="com.unimini.vo.User">
        SELECT
            USER_CODE
            , USER_ID
            , USER_AUTH
            , PASSWORD
        FROM TB_USER
        WHERE USER_ID = #{userId}
    </select>

