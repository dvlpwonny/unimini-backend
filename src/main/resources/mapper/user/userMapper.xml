    <insert id="createUserInfo" parameterType="map">
        INSERT INTO TB_USER
        (
            USER_ID
            , USER_NAME
            , NICKNAME
            , PASSWORD
            , UNI_NUMBER
            , USER_AUTH
            , MOBILE_NO
            , PROFILE_IMAGE_CODE
        )
        VALUES (
            #{userId}
            , #{userName}
            , #{nickname}
            , #{password}
            , #{uniNumber}
            , #{userAuth}
            , #{mobileNo}
